                  },
                  {
                    "padding2": {
                      "type": "panel",
                      "size": [ 4, "100%" ]
                    }
                  },
                  {
                    "button_text_panel": {
                      "type": "panel",
                      "size": [ "100%c", "100%" ],
                      "controls": [
                        {
                          "button_text@rainbowpie_ui_common.text_label_notheme": {
                            "color": "$rainbowpie_ui_theme_topbar_text_color",
                            "text": "$button_text"
                          }
                        }
                      ]
                    }
                  },
                  {
                    "padding3": {
                      "type": "panel",
                      "size": [ 2, "100%" ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
