                      "type": "panel",
                      "size": [ "50%", "100%" ], // 81x54
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "controls": [
                        {
                          "panel": {
                            "type": "panel",
                            "size": [ "100%y", "29.62962962962963%" ], // 16x16
                            "anchor_from": "right_middle",
                            "anchor_to": "right_middle",
                            "controls": [
                              {
                                "furnace_ingredient_panel": {
                                  "type": "panel",
