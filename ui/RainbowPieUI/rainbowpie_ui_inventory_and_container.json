            },
            {
              "chest_fastpick@rainbowpie_module_chest_fastpick.chest_fastpick": {
                "$putin_button_size": [ "100%y", "10.23%" ],
                "$putin_button_offset": [ "100%x + 1.19%", "-11.16%" ],
                "$pickup_button_size": [ "100%y", "10.23%" ],
                "$pickup_button_offset": [ "100%x + 1.19%", 0 ]
              }
